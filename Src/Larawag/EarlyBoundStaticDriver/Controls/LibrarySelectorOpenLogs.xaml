<UserControl x:Class="Larawag.EarlyBoundStaticDriver.Controls.LibrarySelectorOpenLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Larawag.EarlyBoundStaticDriver.Controls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Label DockPanel.Dock="Right" Padding="1,1,5,1">
            <Hyperlink Command="{Binding CommandOpenGenerateDllLog}">Open log file</Hyperlink>
        </Label>
        <Label DockPanel.Dock="Right" Padding="5,1,5,1">
            <Hyperlink Command="{Binding CommandOpenCompileDllLog}">Open compilation output</Hyperlink>
        </Label>
    </StackPanel>
</UserControl>
